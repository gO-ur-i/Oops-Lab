import java.util.*;

class StrManip{

public static void main(String[] args) {

System.out.println("Enter The String");

Scanner sc = new Scanner(System.in);

String str1 = sc.nextLine();

System.out.println("\nLength of String = "+str1.length());

System.out.println("\nCharacter at First position = "+str1.charAt(1));

System.out.println("\nString Contains 'Col'sequence :"+str1.contains("Col"));

System.out.println("\nString ends with e : "+str1.endsWith("e"));

System.out.println("\nReplace'col' with 'kol' :"+str1.replaceAll("Col","kol"));

System.out.println("\nLowercase : "+str1.toLowerCase());

System.out.println("\nUppercase : "+str1.toUpperCase());

}

}
